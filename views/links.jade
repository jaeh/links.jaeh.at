extends layout

block content
  h1 Welcome to our linkshare

  ul.links.list
    for link in links
      li
        a(href=link.url)= link.text
        if link.uploader
          div.uploader= link.uploader
        if link.desc
          div.desc= link.desc
        if link.category
          div.category
            span.title category: 
            span.category= link.category


block aside
  ul
    for cat in categories
      li
        a(href= '/' + cat.slug + '/links')= cat.name
